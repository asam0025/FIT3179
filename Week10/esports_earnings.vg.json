{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Esports winnings in each country",
  "width": 900,
  "height": 500,
  "projection": {"type": "equirectangular"},
  "layer": [
    {
      "data": {
        "url": "countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "stroke": "#ccc", "strokeWidth": 0.5, "fill": null}
    },
    {
      "data": {
        "url": "countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "#e0f3f8", "stroke": "#999"}
    },
    {
      "data": {
        "url": "countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {"url": "country_earnings.csv"},
            "key": "country",
            "fields": ["total_prize_usd"]
          }
        },
        {"calculate": "datum.properties.LABEL_X", "as": "longitude"},
        {"calculate": "datum.properties.LABEL_Y", "as": "latitude"}
      ],
      "mark": {"type": "circle", "color": "red", "opacity": 0.7},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "total_prize_usd",
          "type": "quantitative",
          "scale": {"type": "sqrt", "range": [0, 2000]},
          "legend": {"title": "Total Prize (USD)"}
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "total_prize_usd", "type": "quantitative", "title": "Total Prize USD"}
        ]
      }
    }
  ]
}
